# ==============================================
# DREAMDOT ENVIRONMENT VARIABLES
# ==============================================

# -----------------
# DATABASE - MongoDB
# -----------------
MONGODB_URI=mongodb://localhost:27017/dreamdot
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dreamdot?retryWrites=true&w=majority

# -----------------
# DATABASE - PostgreSQL
# -----------------
DATABASE_URL_USER=postgresql://username:password@localhost:5432/dreamdot_user
DATABASE_URL_SOCIAL=postgresql://username:password@localhost:5432/dreamdot_social
DATABASE_URL_AUDIT=postgresql://username:password@localhost:5432/dreamdot_audit
DATABASE_URL_ITEM=postgresql://username:password@localhost:5432/dreamdot_item
DATABASE_URL_COMMUNITY=postgresql://username:password@localhost:5432/dreamdot_community

# -----------------
# AUTHENTICATION - NextAuth
# -----------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here-change-in-production

# -----------------
# IMAGE STORAGE - ImageKit
# -----------------
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_imagekit_public_key_here
IMAGEKIT_PRIVATE_KEY=your_imagekit_private_key_here
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# To get ImageKit credentials:
# 1. Sign up at https://imagekit.io
# 2. Go to Dashboard → Developer Options
# 3. Copy Public Key, Private Key, and URL Endpoint

# -----------------
# IMAGE STORAGE - Cloudinary (Alternative)
# -----------------
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# To get Cloudinary credentials:
# 1. Sign up at https://cloudinary.com
# 2. Go to Dashboard → Account Details
# 3. Copy Cloud Name, API Key, and API Secret

# -----------------
# PAYMENT - Stripe
# -----------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------
# EXTERNAL SERVICES (Optional)
# -----------------
# Add any other third-party API keys here
