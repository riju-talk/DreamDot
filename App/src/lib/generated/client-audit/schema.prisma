generator client {
  provider        = "prisma-client-js"
  output          = "../generated/client-audit"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:connectdbserver@localhost:5432/mydb?search_path=audit"
  schemas  = ["audit"]
}

model admin_actions_log {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  admin_id    String   @db.Uuid
  action_type String   @db.VarChar(50)
  target_id   String?  @db.Uuid
  description String?
  created_at  DateTime @default(now()) @db.Timestamp(6)

  @@schema("audit")
}

model notification_log {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  recipient_id String   @db.Uuid
  message      String
  is_read      Boolean? @default(false)
  created_at   DateTime @default(now()) @db.Timestamp(6)

  @@schema("audit")
}

model system_audit_log {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  event_type String   @db.VarChar(50)
  details    String?
  created_at DateTime @default(now()) @db.Timestamp(6)

  @@schema("audit")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model admin_cred {
  c_id       BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  name       String?
  password   String?
  hash       String

  @@schema("audit")
}
